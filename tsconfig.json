{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es2018",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
     "src/**/*"
    ],
"exclude": [
    "node_modules",
    "**/*.spec.ts"
],
  "typeRoots": [
    "node_modules/@types",
    "@types"
  ]
}
