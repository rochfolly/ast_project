<!DOCTYPE html>

<html>
    <head>
        <title>Projet Node</title>
        <link rel="stylesheet" href="/semantic/semantic.min.css">
        <style>
            .main.container{
                margin-top: 10em;
            }
        </style>
    </head>
    <body>
         <div class="ui fixed inverted menu">
             <a href="/" class="header item">Bonjour <%= name %></a>
             <button class="ui orange button" href="/logout" onClick='document.location.href="/logout"' type="submit">DÃ©connexion</button>
         </div>


<div class="ui main container">
  <% if(locals.success){ %>
     <div class="ui positive message">
                <%= success %>
     </div>
     <% } %>

   <button class="ui teal button" id="show-metrics">Afficher les metrics</button>
   <button class="small ui button" href="metrics/add" onClick='document.location.href="metrics/add"'>Ajouter metrics</button>

   <div id="metrics"></div>

</div>
</body>

<script>
  $('#show-metrics').click((e) => {
    e.preventDefault()
    $.getJSON('/metrics.json', {}, (data) => {
      const content = data.map(d => {
        return `<p>timestamp: ${d.timestamp}, value: ${d.value}</p>`
      })
      $("#metrics").append(content.join("\n"))
    })
  })
</script>

</html>
